# Service Configuration
PORT=3010
NODE_ENV=development
SERVICE_NAME=ai-service

# Gemini Configuration
GEMINI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_RETRIES=3
GEMINI_TIMEOUT=30000

# Database - MongoDB
MONGODB_URL=mongodb://admin:admin123@localhost:27017/ev_ai_service?authSource=admin

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123
REDIS_DB=0
REDIS_CONNECT_TIMEOUT=20000

# RabbitMQ
RABBITMQ_URL=amqp://admin:admin123@localhost:5672
RABBITMQ_EXCHANGE=ev_exchange

# Rate Limiting
REQUESTS_PER_MINUTE=30
AI_REQUEST_TIMEOUT=60000

# External Services (for context)
USER_SERVICE_URL=http://localhost:3002
BOOKING_SERVICE_URL=http://localhost:3003
COST_SERVICE_URL=http://localhost:3004