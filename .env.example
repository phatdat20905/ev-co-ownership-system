# .env.example
# Copy this file to .env.production and fill in your actual values

# ======= DATABASE =======
DB_USER=postgres
DB_PASSWORD=change_this_secure_password

# ======= MONGODB =======
MONGO_USER=admin
MONGO_PASSWORD=change_this_secure_mongo_password

# ======= REDIS =======
REDIS_PASSWORD=change_this_secure_redis_password

# ======= RABBITMQ =======
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=change_this_secure_rabbitmq_password

# ======= JWT SECRETS - MUST CHANGE IN PRODUCTION =======
JWT_SECRET=change_this_super_secure_jwt_secret_key_min_32_chars
JWT_REFRESH_SECRET=change_this_super_secure_refresh_secret_key_min_32_chars

# ======= SMTP/EMAIL =======
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password

# ======= API & URLs =======
API_BASE_URL=https://yourdomain.com/api/v1